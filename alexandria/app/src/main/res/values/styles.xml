<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="actionBarStyle">@style/ActionBar.Solid.Alexandria.NoTitle</item>
    </style>

    <!-- Main activity action bar styles -->
    <style name="ActionBar.Solid.Alexandria.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>

    <style name="AboutTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Alexandria</item>
    </style>

    <!-- About activity action bar styles -->
    <style name="ActionBar.Solid.Alexandria" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showTitle|showHome</item>
    </style>
</resources>
